{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "outDir": "./build",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react-native"
  },
  "include": [
    "src/**/*",
    "App.tsx",
    "*.tsx",
    "*.ts"
  ],
  "exclude": [
    "node_modules", 
    "**/*.spec.ts",
    "**/*.test.ts",
    "babel.config.js",
    "metro.config.js",
    ".eslintrc.js",
  ]
}
